{
  "name": "md3-ui",
  "private": true,
  "homepage": "https://eikefoken.com/md3-ui",
  "workspaces": [
    "packages/*",
    "tools/*",
    "app",
    "docs"
  ],
  "dependencies": {
    "@babel/core": "^7.21.8",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.0",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@manypkg/cli": "^0.20.0",
    "@preconstruct/hook": "^0.4.0",
    "@storybook/addon-a11y": "^7.0.12",
    "@storybook/addon-essentials": "^7.0.12",
    "@storybook/react": "^7.0.12",
    "@storybook/react-webpack5": "^7.0.12",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.13",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "babel-jest": "^29.5.0",
    "babel-plugin-react-native-web": "^0.19.4",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^44.2.4",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-testing-library": "^5.11.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "gh-pages": "^5.0.0",
    "glob": "^10.2.5",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "knip": "^2.11.0",
    "lerna": "^6.6.2",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.71.8",
    "react-native-builder-bob": "^0.20.4",
    "react-native-safe-area-context": "4.5.0",
    "react-native-svg": "13.4.0",
    "react-native-web": "^0.19.4",
    "rimraf": "^5.0.1",
    "storybook": "^7.0.12",
    "storybook-addon-performance": "^0.17.1",
    "storybook-dark-mode": "^3.0.0",
    "tsx": "^3.12.7",
    "typescript": "~5.0.4",
    "webpack": "^5.83.1",
    "yarn-deduplicate": "^6.0.2"
  },
  "scripts": {
    "build": "lerna run build --ignore=\"@md3-ui/docs\"",
    "build:props-docs": "yarn typedocs && lerna run build --scope=\"@md3-ui/props-docs\"",
    "deploy": "yarn storybook:build && gh-pages -d storybook-static && rimraf storybook-static",
    "lint": "eslint .",
    "postinstall": "manypkg check && tsx scripts/create-dist.ts",
    "prepare": "husky install",
    "prestorybook": "rimraf node_modules/.cache/storybook",
    "storybook": "sb dev -p 6006",
    "storybook:build": "sb build",
    "tsc": "yarn typecheck",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --color --runInBand --ci",
    "test:watch": "jest --maxWorkers=25% --watch --onlyChanged",
    "typedocs": "lerna run typedocs",
    "typecheck": "tsc --noEmit"
  }
}
