{
  "name": "md3-ui",
  "private": true,
  "homepage": "https://eikefoken.com/md3-ui",
  "workspaces": [
    "packages/*",
    "tools/*",
    "app",
    "docs"
  ],
  "dependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@manypkg/cli": "^0.19.2",
    "@preconstruct/cli": "^2.2.2",
    "@storybook/addon-a11y": "^7.0.0-alpha.56",
    "@storybook/addon-essentials": "^7.0.0-alpha.56",
    "@storybook/cli": "^7.0.0-alpha.56",
    "@storybook/react": "^7.0.0-alpha.56",
    "@storybook/react-webpack5": "^7.0.0-alpha.56",
    "@swc-node/jest": "^1.5.5",
    "@swc/core": "^1.3.21",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/react-is": "^17.0.3",
    "@types/react-native": "^0.70.7",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "babel-loader": "^9.1.0",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.7",
    "eslint-plugin-testing-library": "^5.9.1",
    "eslint-plugin-unicorn": "^45.0.1",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^6.1.0",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.1",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.6",
    "react-native-safe-area-context": "4.4.1",
    "react-native-svg": "13.4.0",
    "react-native-web": "^0.18.10",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.3",
    "webpack": "^5.75.0",
    "yarn-deduplicate": "^6.0.0"
  },
  "scripts": {
    "build": "preconstruct build",
    "build:props-docs": "yarn manypkg run props-docs build",
    "deploy": "yarn storybook:build && gh-pages -d storybook-static && rimraf storybook-static",
    "lint": "eslint .",
    "postinstall": "manypkg check && preconstruct dev",
    "prepare": "husky install",
    "prestorybook": "rimraf node_modules/.cache/storybook",
    "storybook": "sb dev -p 6006",
    "storybook:build": "sb build",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --color --runInBand --ci",
    "test:watch": "jest --maxWorkers=25% --watch --onlyChanged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "prettier --write",
    "*.{md,mdx,json,eslintrc,prettierrc}": "prettier --write"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
