    "@storybook/addon-a11y": "^6.5.0-alpha.48",
    "@storybook/addon-essentials": "^6.5.0-alpha.48",
    "@storybook/react": "^6.5.0-alpha.48",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@types/react-native": "^0.67.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "babel-loader": "^8.2.3",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.1.0",
    "eslint-plugin-unicorn": "^41.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-native": "^0.67.3",
    "react-native-safe-area-context": "~3.3.2",
    "react-native-svg": "^12.3.0",
    "react-native-web": "^0.17.7",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "~4.6.2",
    "webpack": "^5.70.0"
  },
  "scripts": {
    "lint": "eslint .",
    "postinstall": "manypkg check && preconstruct dev",
    "prepare": "husky install",
    "prestorybook": "rimraf node_modules/.cache/storybook",
    "storybook": "start-storybook -p 6006",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --color --runInBand --ci",
    "test:watch": "jest --maxWorkers=25% --watch --onlyChanged"
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx}": "prettier --write"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
