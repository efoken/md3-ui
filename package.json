{
  "name": "md3-ui",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*",
    "app"
  ],
  "dependencies": {
    "@babel/core": "^7.17.7",
    "@babel/preset-env": "^7.16.11",
    "@manypkg/cli": "^0.19.1",
