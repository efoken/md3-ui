{
  "name": "md3-ui",
  "private": true,
  "homepage": "https://eikefoken.com/md3-ui",
  "workspaces": [
    "packages/*",
    "tools/*",
    "app",
    "docs"
  ],
  "dependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@manypkg/cli": "^0.20.0",
    "@preconstruct/cli": "^2.3.0",
    "@storybook/addon-a11y": "^7.0.0-beta.50",
    "@storybook/addon-essentials": "^7.0.0-beta.50",
    "@storybook/cli": "^7.0.0-beta.50",
    "@storybook/react": "^7.0.0-beta.50",
    "@storybook/react-webpack5": "^7.0.0-beta.50",
    "@swc-node/jest": "^1.6.2",
    "@swc/core": "^1.3.35",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-is": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-loader": "^9.1.2",
    "eslint": "^8.34.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.10",
    "eslint-plugin-testing-library": "^5.10.2",
    "eslint-plugin-unicorn": "^45.0.2",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "lerna": "^6.5.1",
    "lint-staged": "^13.1.2",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.71.3",
    "react-native-safe-area-context": "4.5.0",
    "react-native-svg": "13.4.0",
    "react-native-web": "0.0.0-c26cb9b08",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5",
    "webpack": "^5.75.0",
    "yarn-deduplicate": "^6.0.1"
  },
  "scripts": {
    "build": "preconstruct build",
    "build:props-docs": "yarn manypkg run props-docs build",
    "deploy": "yarn storybook:build && gh-pages -d storybook-static && rimraf storybook-static",
    "lint": "eslint .",
    "postinstall": "manypkg check && patch-package && preconstruct dev",
    "prepare": "husky install",
    "prestorybook": "rimraf node_modules/.cache/storybook",
    "storybook": "sb dev -p 6006",
    "storybook:build": "sb build",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --color --runInBand --ci",
    "test:watch": "jest --maxWorkers=25% --watch --onlyChanged",
    "tokens": "ts-node scripts/tokens.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "prettier --write",
    "*.{md,mdx,json,eslintrc,prettierrc}": "prettier --write"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
