  "name": "md3-ui",
  "private": true,
  "homepage": "https://eikefoken.com/md3-ui",
  "workspaces": [
    "packages/*",
    "tools/*",
    "app",
    "docs"
  ],
  "dependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.7",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@swc-node/jest": "^1.5.2",
    "@types/jest": "^28.1.4",
    "@types/node": "^16.11.43",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@types/react-is": "^17.0.3",
    "@types/react-native": "^0.68.1",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "babel-loader": "^8.2.5",
    "eslint": "^8.19.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.5.13",
    "eslint-plugin-testing-library": "^5.5.1",
    "eslint-plugin-unicorn": "^43.0.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "lerna": "^5.1.7",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.68.2",
    "react-native-safe-area-context": "4.2.4",
    "react-native-svg": "^12.3.0",
    "react-native-web": "^0.18.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.2",
    "typescript": "~4.7.4",
    "webpack": "^5.73.0",
    "yarn-deduplicate": "^5.0.0"
  },
  "resolutions": {
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17"
  },
  "scripts": {
    "build": "preconstruct build",
    "deploy": "yarn storybook:build && gh-pages -d storybook-static && rimraf storybook-static",
    "lint": "eslint .",
    "postinstall": "manypkg check && preconstruct dev",
    "prepare": "husky install",
    "prestorybook": "rimraf node_modules/.cache/storybook",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --color --runInBand --ci",
    "test:watch": "jest --maxWorkers=25% --watch --onlyChanged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "prettier --write",
    "*.{md,mdx,json,eslintrc,prettierrc}": "prettier --write"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
