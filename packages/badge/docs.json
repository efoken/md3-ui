    "showZero": { "type": "boolean", "defaultValue": false, "required": false },
    "value": {
      "type": "string | number",
      "required": false,
      "description": "The value rendered within the badge."
    }
  },
  "UseBadge": {
    "invisible": { "type": "boolean", "required": false },
